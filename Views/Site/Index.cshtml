@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<PasswordManager.Models.Site>

<h2>Where would you like to go @User.Identity.Name?</h2>
<hr />

@if (Model.Any())
{
    <ul>
        @foreach (var Site in Model)
        {
            <li>Id: @Html.DisplayFor(modelItem => Site.Id)</li>
            <li>Name: @Html.DisplayFor(modelItem => Site.Name)</li>
            <li>URL: @Html.DisplayFor(modelItem => Site.Url)</li>
            <li>UserName: @Html.DisplayFor(modelItem => Site.UserName)</li>
            <li>Email: @Html.DisplayFor(modelItem => Site.Email)</li>
            <li>User: @Html.DisplayFor(modelItem => Site.User.UserName)</li>
        }
    </ul>
}
else
{
    <p>No sites have been added yet!</p>
}

@Html.ActionLink("Create new", "Create")