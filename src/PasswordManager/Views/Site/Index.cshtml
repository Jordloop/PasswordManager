@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<PasswordManager.Models.Site>



<div class="main-content">

    <h2>Where would you like to go?</h2>
    <br /><br />

    @if (Model.Any())
    {
        <div class="container sites">
                <div class="row">
                @foreach (var Site in Model)
                {
    //Only will render Site info if Site has a sute Url property
                    @if(Site.Url != null)
                    {
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <div class="caption">
                                    <h3>@Html.DisplayFor(modelItem => Site.Name)</h3>
                                    <a href="/Site/Edit/@Html.DisplayFor(modelItem => Site.Id)" class="btn btn-default" role="button">Edit</a>
                                    <button class="btn btn-primary" id="@Site.Url"onclick="copyToClipboard('#pass-@Site.Id', this.id)">GO!</button>

                                    <p id="edit-@Site.Id">. . .</p>

                                    @*Hidden Properties*@
                                    <p class="hide" id="pass-@Site.Id">@Site.Password</p>
                                    <p class="hide" id="url-@Site.Id">@Site.Url</p>
                                </div>
                            </div>
                        </div>
                    }

                }
                </div>

        </div>
    }
    else
    {
        <p>No sites have been added yet!</p>
        <h3>@Html.ActionLink("Add Site", "Create", "Site")</h3>
    }

</div>